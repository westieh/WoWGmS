@page
@model WoWGMS.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="container py-5">
    <h1 class="display-3 text-center text-light mb-5">Welcome to The Shadowstalkers</h1>
    <div class="text-center mb-4">
        <img src="~/img/TheShadowstalkersBanner.png" alt="The Shadowstalkers Banner" class="img-fluid rounded shadow" style="max-height: 200px;" />
    </div>
    <div class="row g-4 justify-content-center">
        <!-- Apply Card -->
        <div class="col-12 col-md-4 d-flex justify-content-center">
            <a asp-page="/Apply" class="text-decoration-none w-100">
                <div class="card bg-dark text-white border-0 shadow-lg rounded-4 overflow-hidden" style="height: 400px;">
                    <div class="d-flex align-items-center justify-content-center h-100" style="background-color: red;">
                        <!-- Placeholder background: replace with image -->
                        <h2 class="text-center bg-dark bg-opacity-75 px-4 py-2 rounded">Apply</h2>
                    </div>
                </div>
            </a>
        </div>

        <!-- Upcoming Raids Card -->
        <div class="col-12 col-md-4 d-flex justify-content-center">
            <a asp-page="/Event" class="text-decoration-none w-100">
                <div class="card bg-dark text-white border-0 shadow-lg rounded-4 overflow-hidden" style="height: 400px;">
                    <div class="d-flex align-items-center justify-content-center h-100" style="background-color: orange;">
                        <!-- Placeholder background: replace with image -->
                        <h2 class="text-center bg-dark bg-opacity-75 px-4 py-2 rounded">Upcoming Raids</h2>
                    </div>
                </div>
            </a>
        </div>

        <!-- About Us Card -->
        <div class="col-12 col-md-4 d-flex justify-content-center">
            <a asp-page="/AboutUs" class="text-decoration-none w-100">
                <div class="card bg-dark text-white border-0 shadow-lg rounded-4 overflow-hidden" style="height: 400px;">
                    <div class="d-flex align-items-center justify-content-center h-100" style="background-color: pink;">
                        <!-- Placeholder background: replace with image -->
                        <h2 class="text-center bg-dark bg-opacity-75 px-4 py-2 rounded">About Us</h2>
                    </div>
                </div>
            </a>
        </div>
    </div>
    </div>
</div>