@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <img src="~/images/TheShadowstalkersBanner.webp" alt="The Shadowstalkers Banner" class="img-fluid shadow banner-img" />
</div>

<div class="text-white mt-4 p-4 bg-dark rounded-3 shadow">
    <h1 class="display-5 fw-bold text-center">Welcome to The Shadowstalkers</h1>
    <p class="lead text-center">Guild Management System</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <a class="text-decoration-none" asp-page="/Event">
            <div class="card bg-secondary text-white shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title">Upcoming Rosters</h4>
                    <p class="card-text">View and organize upcoming raid rosters.</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a class="text-decoration-none" asp-page="/Shared/GetAllMembers">
            <div class="card bg-secondary text-white shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title">Members</h4>
                    <p class="card-text">Browse guild members by rank.</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a class="text-decoration-none" asp-page="/Apply">
            <div class="card bg-secondary text-white shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title">Applications</h4>
                    <p class="card-text">Review and approve new applications.</p>
                </div>
            </div>
        </a>
    </div>
</div>

<style>
    body {
        background-color: black;
    }

    .banner-img {
        max-height: 300px;
        object-fit: contain;
        margin-top: 20px;
        border-radius: 10px;
    }

    .card:hover {
        background-color: black;
        transition: background-color 0.3s;
    }
</style>