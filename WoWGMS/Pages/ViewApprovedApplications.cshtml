@page
@model WoWGMS.Pages.ViewApprovedApplicationsModel
@{
    // Sets the page title
    ViewData["Title"] = "Approved Applications";
}

<h2>Approved Applications</h2>

@if (Model.Applications?.Count == 0)
{
    <!-- Message if no approved applications exist -->
    <p>No approved applications found.</p>
}
else
{
    <!-- Table displaying list of approved applications -->
    <table class="table">
        <thead>
            <tr>
                <th>Discord Name</th>
                <th>Submission Date</th>
                <th>Processed By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model.Applications)
            {
                <tr>
                    <!-- Discord Name of the applicant -->
                    <td>@app.DiscordName</td>
                    <!-- Submission date of the application -->
                    <td>@app.SubmissionDate.ToString("g")</td>
                    <!-- Officer who processed the application -->
                    <td>@app.ProcessedBy</td>
                </tr>
            }
        </tbody>
    </table>
}
