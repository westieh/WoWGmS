@page
@model WoWGMS.Pages.Admin.Applications.IndexModel
@{
    ViewData["Title"] = "Applications";
}

<h2>Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>Character Name</th>
            <th>Discord Name</th>
            <th>Class</th>
            <th>Role</th>
            <th>Approved</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model.Applications)
        {
            <tr>
                <td>@app.CharacterName</td>
                <td>@app.DiscordName</td>
                <td>@app.Class</td>
                <td>@app.Role</td>
                <td>@(app.Approved ? "✔️" : "❌")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@app.ApplicationId">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@app.ApplicationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>