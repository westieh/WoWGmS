@page
@model WoWGMS.Pages.Admin.ManageCharactersModel
@using WowGMSBackend.Model

@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Officer")]

<h2>Manage Characters</h2>

<form method="get" class="mb-3">
    <label for="SelectedBossSlug">View boss kill stats for:</label>
    <select asp-for="SelectedBossSlug"
            asp-items="@(new SelectList(Model.AllBosses, "Slug", "DisplayName"))"
            class="form-control"
            onchange="this.form.submit()">
        <option value="">-- Select Boss --</option>
    </select>
</form>

@foreach (var group in Model.GroupedCharacters)
{
    var memberId = group.Key;
    <h4>Member ID: @memberId</h4>
    <form method="post" asp-page-handler="UpdateKills">
        <input type="hidden" name="selectedBossSlug" value="@Model.SelectedBossSlug" />
        <table class="table table-dark table-bordered mb-5">
            <thead>
                <tr>
                    <th>Character Name</th>
                    <th>Class</th>
                    <th>Role</th>
                    <th>Realm</th>
                    <th>Kill Count</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in group.Value)
                {
                    <tr>
                        <td>@entry.Character.CharacterName</td>
                        <td>@entry.Character.Class</td>
                        <td>@entry.Character.Role</td>
                        <td>@entry.Character.RealmName</td>
                        <td>
                            <input type="number" name="KillUpdates[@entry.Character.Id]" value="@entry.KillCount" class="form-control form-control-sm" min="0" />
                        </td>
                        <td>
                            <button formaction="?handler=DeleteCharacter" formmethod="post" name="id" value="@entry.Character.Id" class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6" class="text-end">
                        <button type="submit" class="btn btn-sm btn-primary">Update Kills</button>
                    </td>
                </tr>
            </tfoot>
        </table>
    </form>

}