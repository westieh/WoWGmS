@page
@model WoWGMS.Pages.Admin.Dashboard.IndexModel
@{
    // Sets the title of the web page
    ViewData["Title"] = "Applications";
}

<h2>Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>Character Name</th>
            <th>Discord Name</th>
            <th>Class</th>
            <th>Role</th>
            <th>Approved</th>
            <th></th> <!-- Placeholder for action links -->
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model.Applications)
        {
            <tr>
                <td>@app.CharacterName</td> <!-- Display character name -->
                <td>@app.DiscordName</td>   <!-- Display Discord name -->
                <td>@app.Class</td>         <!-- Display class -->
                <td>@app.Role</td>          <!-- Display role -->
                <td>@(app.Approved ? "✔️" : "❌")</td> <!-- Display approval status -->
                <td>
                    <!-- Links to edit and delete application -->
                    <a asp-page="./Applications/Edit" asp-route-id="@app.ApplicationId">Edit</a> |
                    <a asp-page="./Applications/Delete" asp-route-id="@app.ApplicationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Members</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Rank</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model.Members)
        {
            <tr>
                <td>@app.Name</td> <!-- Display member name -->
                <td>@app.Rank</td> <!-- Display member rank -->
                <td>
                    <!-- Links to edit and delete member -->
                    <a asp-page="./Members/Edit" asp-route-id="@app.MemberId">Edit</a> |
                    <a asp-page="./Members/Delete" asp-route-id="@app.MemberId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
