@page "{id:int}"
@model WoWGMS.Pages.Admin.Dashboard.Applications.EditModel
@{
    ViewData["Title"] = "Edit Application";
}

<h2>Edit Application</h2>

<form method="post">
    <input type="hidden" asp-for="Application.ApplicationId" />

    <div class="form-group">
        <label>Character Name</label>
        <input asp-for="Application.CharacterName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Discord Name</label>
        <input asp-for="Application.DiscordName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Class</label>
        <input asp-for="Application.Class" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <input asp-for="Application.Role" class="form-control" />
    </div>
    <div class="form-group">
        <label>Approved</label>
        <input asp-for="Application.Approved" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>