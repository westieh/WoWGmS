@page "{id:int}"        
<!-- Route constraint: expects an integer id -->
@model WoWGMS.Pages.Admin.Dashboard.Members.DeleteModel

@{
    ViewData["Title"] = "Delete Member";
}

<h1>Delete Member</h1>

<!-- Display any error messages in a Bootstrap-styled alert -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@modelError.ErrorMessage</p>
        }
    </div>
}

<!-- Confirmation prompt -->
<p>Are you sure you want to delete the member <strong>@Model.Member.Name</strong>?</p>

<!-- Form to confirm deletion -->
<form method="post">
    <input type="hidden" asp-for="Member.MemberId" /> <!-- Hidden field to pass the member ID -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Shared/GetAllMembers" class="btn btn-secondary">Cancel</a> <!-- Cancel link -->
</form>