<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WoW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: black;
            color: #f0f0f0;
            font-family: "Segoe UI", sans-serif;
        }

        a.nav-link {
            color: #ccc !important;
        }

            a.nav-link:hover {
                color: white !important;
            }

        header nav {
            background-color: black !important;
            border-bottom: 1px solid #444;
        }

        footer {
            background-color: #black;
            color: #aaa;
            border-top: 1px solid #444;
        }

        .container, .card {
            background-color: black;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 0 10px rgba(0,0,0,0.4);
        }

        .card {
            padding: 15px;
        }

        h1, h2, h3 {
            color: white;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 10px 0;
            padding-bottom: 5px;
            border-bottom: 1px solid #444;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        button {
            background-color: #4e88ff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
        }

            button:hover {
                background-color: #3a6edc;
            }

        .member-rank {
            font-size: 0.9em;
            color: white;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-page="/Index">WoW</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link" asp-page="/CreateApplication">Apply</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Event">Todays Event</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Shared/GetAllMembers">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Apply">Apply</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Privacy">Privacy</a>
                        </li>

                            

                        @if (User.IsInRole("Trialist"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/AddCharacter">Member Panel</a>
                            </li>
                        }
                        @if (User.IsInRole("Officer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/Admin/Applications/Index">Admin Panel</a>
                            </li>
                        }
                       
                        
                        @if (User.IsInRole("Officer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/ViewApplications">Submitted applications</a>
                            </li>
                        }

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Admin/Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form method="post" asp-page="/Logout">
                                    <button type="submit" class="nav-link btn btn-link text-dark" style="cursor: pointer;">
                                        Logout (@User.Identity.Name)
                                    </button>
                                </form>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center py-3">
        <div class="container">
            &copy; 2025 - WoW - <a class="text-light" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
