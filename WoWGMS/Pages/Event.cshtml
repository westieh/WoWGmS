@page
@model WoWGMS.Pages.EventModel
@{
    ViewData["Title"] = "Raid Events";
}

<h1>Raid Events</h1>

@if (Model.BossRosters == null || !Model.BossRosters.Any())
{
    <p>No boss rosters found.</p>
}
else
{
    foreach (var roster in Model.BossRosters)
    {
        <div class="roster-card mb-4">
            <h4>@roster.BossName</h4>
            <p><strong>Time:</strong> @roster.InstanceTime.ToString("g")</p>
            <p><strong>Processed:</strong> @(roster.IsProcessed ? "Yes" : "No")</p>

            <h5>Participants:</h5>
            @if (roster.Participants != null && roster.Participants.Any())
            {
                <ul>
                    @foreach (var character in roster.Participants)
                    {
                        <li>@character.CharacterName (@character.RealmName) - @character.Class / @character.Role</li>
                    }
                </ul>
            }
            else
            {
                <p><em>No participants.</em></p>
            }
        </div>
    }
}
