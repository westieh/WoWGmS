@page
@model ViewApplicationsModel
@using WowGMSBackend.Model

<style>
    table, th, td {
        color: white;
    }

    input[type="text"], select, button {
        color: black;
    }
</style>

<h2 style="color:white;">Submitted Applications</h2>

@if (Model.Applications == null || !Model.Applications.Any())
{
    <p style="color:white;">Der er endnu ingen ansøgninger.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Discord</th>
                <th>Character</th>
                    <th>RealmName</th>
                <th>Class</th>
                <th>Role</th>
                <th>Note</th>
                <th>Godkendt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model.Applications)
            {
                <tr>
                    <td>@app.DiscordName</td>
                    <td>@app.CharacterName</td>
                    <td>@app.ServerName</td>
                    <td>@app.Class</td>
                    <td>@app.Role</td>
                    <td>
                        <form method="post" asp-page-handler="UpdateNote">
                            <input type="hidden" name="ApplicationId" value="@app.ApplicationId" />
                            <input type="text" name="Note" value="@app.Note" />
                            <button type="submit">Gem</button>
                        </form>
                    </td>
                     <td>
                    @(app.Approved ? "Ja" : "Nej")
                     <form method="post" asp-page-handler="ToggleApproval">
                         <input type="hidden" name="ApplicationId" value="@app.ApplicationId" />
                            <select name="Approved">
                                @if (app.Approved)
                                {
                                    <option value="true" selected>Ja</option>
                                    <option value="false">Nej</option>
                                }
                                else
                                {
                                    <option value="true">Ja</option>
                                    <option value="false" selected>Nej</option>
                                }
                            </select>
                        <button type="submit">Update status</button>
                    </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}