@page
@model ViewApplicationsModel
@using WowGMSBackend.Model

<style>
    table, th, td {
        color: white;
    }

    input[type="text"], select, button {
        color: black;
    }
</style>

<h2 style="color:white;">Submitted applications</h2>

@if (Model.Applications == null || !Model.Applications.Any())
{
    <p style="color:white;">No applications yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Discord</th>
                <th>Character</th>
                <th>Class</th>
                <th>Role</th>
                <th>Note</th>
                <th>Approved</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model.Applications)
            {
                <tr>
                    <td>@app.DiscordName</td>
                    <td>@app.CharacterName</td>
                    <td>@app.Class</td>
                    <td>@app.Role</td>
                    <td>
                        <form method="post" asp-page-handler="UpdateNote">
                            <input type="hidden" name="ApplicationId" value="@app.ApplicationId" />
                            <input type="text" name="Note" value="@app.Note" />
                            <button type="submit">Gem</button>
                        </form>
                    </td>
                    <td>
                        @(app.Approved ? "Yes" : "No")
                        <form method="post" asp-page-handler="ToggleApproval">
                            <input type="hidden" name="ApplicationId" value="@app.ApplicationId" />
                            <select name="Approved">
                                <option value="true" selected="@(app.Approved ? "selected" : null)">Yes</option>
                                <option value="false" selected="@(!app.Approved ? "selected" : null)">No</option>
                            </select>
                            <button type="submit">Update status</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}